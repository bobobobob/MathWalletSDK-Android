<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="登录"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="支付"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/action_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="自定义action"
        app:layout_constraintTop_toBottomOf="@+id/pay_btn"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/openDapp_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="open Dapp"
        app:layout_constraintTop_toBottomOf="@+id/action_btn"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/signMessage_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="signMessage"
        app:layout_constraintTop_toBottomOf="@+id/openDapp_btn"/>
</android.support.constraint.ConstraintLayout>